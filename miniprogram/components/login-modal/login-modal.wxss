/* components/login-modal/login-modal.wxss */
.container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99;
  text-align: center;
  background: rgba(0, 0, 0, 0.6);
}

.panel {
  position: absolute;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  min-height: 300rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.close_icon {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  padding: 15rpx;
}
.close_image{
  height: 40rpx;
  width: 40rpx;
}
.login {
  font-size: 32rpx;
  height: 80rpx;
  background-color: #d43c33;
  color: #fff;
  margin: 110rpx;
}